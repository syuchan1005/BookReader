{
   "name": "book-reader",
   "version": "1.0.0",
   "private": true,
   "author": "syuchan1005<syuchan.dev@gmail.com>",
   "scripts": {
      "serve:client": "cross-env NODE_ENV=react parcel serve public/index.html --port 8080 --out-dir dist/client",
      "build:client": "cross-env NODE_ENV=react parcel build public/index.html --out-dir dist/client",
      "serve:server": "nodemon --watch src/server --ext .js,.ts --exec \"npm run build:server && node dist/server\"",
      "build:server": "cross-env NODE_ENV=koa parcel build --target node src/server/index.ts --out-dir dist/server",
      "serve": "npm-run-all --parallel serve:*",
      "build": "npm run build:client & npm run build:server",
      "lint": "eslint src/**/*.*",
      "start": "ts-node src/index.ts",
      "db:migrate": "ts-node node_modules/.bin/sequelize db:migrate"
   },
   "devDependencies": {
      "@babel/core": "^7.5.5",
      "@types/bluebird": "^3.5.27",
      "@types/koa": "^2.0.49",
      "@types/node": "^8.0.29",
      "@types/validator": "^10.11.3",
      "@typescript-eslint/eslint-plugin": "^2.0.0",
      "@typescript-eslint/parser": "^2.0.0",
      "@typescript-eslint/typescript-estree": "^2.0.0",
      "babel-eslint": "^10.0.3",
      "eslint": "^6.2.2",
      "eslint-config-airbnb": "^18.0.1",
      "eslint-import-resolver-alias": "^1.1.2",
      "eslint-plugin-graphql": "^3.0.3",
      "eslint-plugin-import": "^2.18.2",
      "eslint-plugin-jsx-a11y": "^6.2.3",
      "eslint-plugin-react": "^7.14.3",
      "nodemon": "^1.19.1",
      "npm-run-all": "^4.1.5",
      "react-hot-loader": "^4.12.12",
      "sequelize-cli": "^5.5.1",
      "ts-node": "3.3.0",
      "typescript": "3.3.3333"
   },
   "dependencies": {
      "@apollo/react-hooks": "^3.0.1",
      "@material-ui/core": "^4.3.3",
      "@types/react": "^16.9.2",
      "@types/react-dom": "^16.9.0",
      "apollo-cache-inmemory": "^1.6.3",
      "apollo-client": "^2.6.4",
      "apollo-link": "^1.2.12",
      "apollo-link-error": "^1.1.11",
      "apollo-server-koa": "^2.9.0",
      "apollo-upload-client": "^11.0.0",
      "babel-plugin-transform-class-properties": "^6.24.1",
      "babel-preset-env": "^1.7.0",
      "babel-preset-react": "^6.24.1",
      "cross-env": "^5.2.0",
      "debug": "^4.1.1",
      "graphql": "^14.5.3",
      "graphql-tag": "^2.10.1",
      "history": "^4.9.0",
      "koa": "^2.8.1",
      "koa-static": "^5.0.0",
      "mobx": "^5.13.0",
      "mobx-react": "^6.1.3",
      "parcel-bundler": "^1.12.3",
      "react": "^16.9.0",
      "react-dom": "^16.9.0",
      "react-router-dom": "^5.0.1",
      "reflect-metadata": "^0.1.10",
      "rimraf": "^3.0.0",
      "sequelize": "^5.17.1",
      "sqlite3": "^4.1.0",
      "typeorm": "0.2.18",
