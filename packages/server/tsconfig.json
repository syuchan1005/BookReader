{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2019",
      "esnext",
      "webworker",
      "dom"
    ],
    "target": "es6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "paths": {
    "@server*" :["src/server*"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
