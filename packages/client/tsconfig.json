{
    "compilerOptions": {
      "lib": [
        "es5",
        "es6",
        "es2019",
        "esnext",
        "webworker",
        "dom"
      ],
      "target": "es5",
      "module": "esnext",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "jsx": "react",
      "baseUrl": ".",
      "typeRoots": ["src/@types"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "downlevelIteration": true,
      "skipLibCheck": true
    },
    "paths": {
        "@client*" :["src/client*"],
    },
    "files": ["src/@types/graphql.d.ts"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  