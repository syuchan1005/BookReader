{
  "extends": "./tsconfig.webworker",
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2019",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@client*" :["src/client*"],
      "@server*" :["src/server*"],
      "@common*" :["src/common*"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"],
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "files": ["src/@types/graphql.d.ts"],
  "include": ["src/common/*", "src/client/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/client/service-worker.js"]
}
